<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <ImageView
        android:id="@+id/modelHold"
        android:layout_width="326dp"
        android:layout_height="105dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button3" />

    <ImageView
        android:id="@+id/detailHold"
        android:layout_width="249dp"
        android:layout_height="90dp"
        android:layout_marginVertical="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/modelHold"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="@+id/modelHold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487"
        app:srcCompat="@drawable/button" />

    <TextView
        android:id="@+id/PortNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="serif-monospace"
        android:text="80"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/detailHold"
        app:layout_constraintEnd_toStartOf="@+id/detailHold"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="@+id/modelHold"
        app:layout_constraintTop_toTopOf="@+id/detailHold"
        app:layout_constraintVertical_bias="0.769" />

    <TextView
        android:id="@+id/PortDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Port 80 \nIP Addr  :127.0.0.1"
        android:textColor="#408C33"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/detailHold"
        app:layout_constraintEnd_toEndOf="@+id/detailHold"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="@+id/detailHold"
        app:layout_constraintTop_toTopOf="@+id/detailHold"
        app:layout_constraintVertical_bias="0.206" />

    <TextView
        android:id="@+id/portBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Banner : None"
        android:textColor="#408C33"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/PortDetails"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/PortDetails"
        app:layout_constraintTop_toBottomOf="@+id/PortDetails" />

    <ImageView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/PortNo"
        app:layout_constraintEnd_toStartOf="@+id/detailHold"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/modelHold"
        app:layout_constraintTop_toTopOf="@+id/detailHold"
        app:layout_constraintVertical_bias="0.812"
        app:srcCompat="@drawable/open" />
</androidx.constraintlayout.widget.ConstraintLayout>