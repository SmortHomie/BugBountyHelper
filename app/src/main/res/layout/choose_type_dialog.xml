<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GotoDork"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button"
    android:padding="50dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="-- type of dorking you want to execute --"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/dorkMethod"
        app:layout_constraintStart_toStartOf="@+id/dorkMethod"
        app:layout_constraintTop_toBottomOf="@+id/dorkMethod" />

    <RadioGroup

        android:id="@+id/dorkType"
        android:layout_width="251dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <RadioButton
            android:id="@+id/StrongDorking"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button3"
            android:padding="10dp"
            android:text="Strong Dorking"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/MininalDorking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button3"
            android:padding="10dp"
            android:text="Minimal Dorking"
            android:textColor="@color/white" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- Choose Dorking Method --"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/dorkMethod"
        android:layout_width="271dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/ManDork"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button3"
            android:padding="10dp"
            android:text="Manual Dorking"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/AutoDork"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:background="@drawable/button3"
            android:padding="10dp"
            android:text="Automate Dorking"
            android:textColor="@color/white" />
    </RadioGroup>

    <TextView
        android:id="@+id/headtodorkbutt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button3"
        android:padding="10dp"
        android:text="Let's Dork!"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/dorkType"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="@+id/dorkType"
        app:layout_constraintTop_toBottomOf="@+id/dorkType" />
</androidx.constraintlayout.widget.ConstraintLayout>